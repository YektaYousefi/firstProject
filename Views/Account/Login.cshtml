@model WebApplication2.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
    Layout = "/Views/Shared/_DefaultLayout.cshtml";
}

<html>
<head lang="fa">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود به سایت</title>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: B nazanin, sans-serif;
            max-width: 1000px;
            margin: 0 auto;
        }

        .breadcrumb-custom {
            font-size: 15px;
            margin-bottom: 20px;
            margin-top: 20px;
        }

        .breadcrumb-item {
            display: inline-block;
            margin-right: 5px;
        }

        .container {
            max-width: 400px;
            height: 100%;
            margin: 0 auto;
            padding: 40px;
            border-radius: 4px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group input {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-size: 14px;
                font-weight: bold;
            }

        .remember-me {
            margin-bottom: 20px;
        }

        .link {
            margin-top: 20px;
        }

            .link a {
                display: inline-block;
                margin-right: 10px;
                color: cornflowerblue;
                font-size: 14px;
            }

                .link a:hover {
                    display: inline-block;
                    margin-right: 10px;
                    color: darkblue;
                    font-size: 14px;
                }

        .btn-success {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            color: #fff;
            background-color: #28a745;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .text-danger {
            color: #dc3545 !important;
        }

        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border-color: #c3e6cb;
            font-size: 15px;
            max-height: 30px;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            font-size: 15px;
        }
    </style>
</head>
<body style="text-align:right;">
    <ul class="breadcrumb-custom" style="text-align: right;">
        <li class="breadcrumb-item">خانه </li>
        <li class="breadcrumb-item">ورود</li>
    </ul>
    <div class="container">
        @if (ViewBag.isSuccess != null)
        {
            <div class="alert alert-success text-center">
                <p class="help-block">ورود با موفقیت انجام شد</p>
            </div>
            <script>
                var delay = 3000;
                setTimeout(function () { window.location = "https://localhost:44300/Payment/Payment"; }, delay);
            </script>
        }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="UserName"></label><br />
            <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری" aria-describedby="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button class="btn btn-success"> ورود به صفحه پرداخت </button>
        @if (ViewBag.ErrorMessage != null)
        {
            <p style="color:red;">@ViewBag.ErrorMessage</p>
        }
    </form>
    </div>
</body>
</html>

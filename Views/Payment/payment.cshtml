@model WebApplication2.Models.Order
@using System.Linq
@{
    Layout = null;
    var payments = ViewBag.Payments as List<WebApplication2.Models.Order>;
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <title>ایجاد لینک پرداخت</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f7fa;
            font-family: 'B Nazanin', sans-serif;
            direction: rtl;
        }

        .container {
            margin-top: 40px;
        }

        .form-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            padding: 30px;
            margin-bottom: 40px;
        }

        h4 {
            background-color: #28a745;
            color: #fff;
            padding: 10px;
            border-radius: 8px;
            font-size: 18px;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-success {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 8px;
        }

        table {
            width: 100%;
            text-align: center;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.08);
        }

        thead {
            background-color: #28a745;
            color: white;
        }

        th, td {
            padding: 10px;
            vertical-align: middle;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .text-danger {
            font-size: 14px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-card">
            <h4>فرم ایجاد لینک پرداخت</h4>
            <form asp-action="Payment" asp-controller="Payment" method="post">
                <div class="form-group">
                    <label asp-for="CustomerName">نام مشتری</label>
                    <input asp-for="CustomerName" type="text" class="form-control" placeholder="نام مشتری">
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Amount">مبلغ (تومان)</label>
                    <input asp-for="Amount" type="number" class="form-control" placeholder="مبلغ">
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone">شماره همراه</label>
                    <input asp-for="Phone" type="tel" class="form-control" placeholder="شماره همراه">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description">توضیحات</label>
                    <textarea asp-for="Description" class="form-control" placeholder="توضیحات"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <button class="btn btn-success btn-hover-light">ایجاد لینک پرداخت</button>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
                }
            </form>
        </div>

        @if (payments != null && payments.Any())
        {
            <h4>لیست لینک‌های پرداخت ایجاد شده</h4>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>نام مشتری</th>
                        <th>مبلغ</th>
                        <th>شماره تماس</th>
                        <th>توضیحات</th>
                        <th>لینک پرداخت</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in payments)
                    {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.Amount.ToString("N0") تومان</td>
                            <td>@item.Phone</td>
                            <td>@item.Description</td>
                            <td>
                                <a href="@item.PaymentUrl" target="_blank">@item.PaymentUrl</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">
                هنوز هیچ لینک پرداختی ثبت نشده است.
            </div>
        }
    </div>
</body>
</html>

